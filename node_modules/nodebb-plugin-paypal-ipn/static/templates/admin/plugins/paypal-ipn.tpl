<form role="form" class="paypal-ipn-settings">
	<div class="row">
		<div class="col-sm-2 col-xs-12 settings-header">Settings</div>
		<div class="col-sm-10 col-xs-12">
			<div class="form-group">
				<label for="receiverEmail">Receiver Email:</label>
				<input type="text" id="receiverEmail" name="receiverEmail" title="Receiver Email" class="form-control" placeholder="">
			</div>
			<div class="form-group">
				<label for="paypalUrl">Paypal URL:</label>
				<input type="text" id="paypalUrl" name="paypalUrl" title="Paypal URL" class="form-control" placeholder="https://www.paypal.com/cgi-bin/webscr">
			</div>
		</div>
	</div>
</form>

<button id="save" class="floating-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
	<i class="material-icons">save</i>
</button>